<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>resteasy.scan</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>resteasy.servlet.mapping.prefix</param-name>
        <param-value>/rest</param-value>
    </context-param>

    <listener>
        <listener-class>
            org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>resteasy-servlet</servlet-name>
        <servlet-class>
            org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>resteasy-servlet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>javax.faces.WEBAPP_RESOURCES_DIRECTORY</param-name>
        <param-value>/resources</param-value>
    </context-param>

    <!--Algemeen login-->
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>be.thomasmore.travelmore.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/boeking.xhtml</url-pattern>
    </filter-mapping>
    <!--Admin -->
    <filter>
        <filter-name>adminFilter</filter-name>
        <filter-class>be.thomasmore.travelmore.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/admin.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/stadbeheer.xhtml</url-pattern>
    </filter-mapping>

    <!--ingelogd-->
    <filter>
        <filter-name>loggedInFilter</filter-name>
        <filter-class>be.thomasmore.travelmore.filter.LoggedInFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>loggedInFilter</filter-name>
        <url-pattern>/login.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loggedInFilter</filter-name>
        <url-pattern>/registreer.xhtml</url-pattern>
    </filter-mapping>
</web-app>